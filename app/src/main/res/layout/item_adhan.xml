<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/globalPadding"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/tvNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummyAdhanLabel"
            android:textSize="@dimen/bodyText"
            android:fontFamily="@font/rubik"
            android:layout_toStartOf="@id/tvTimePassed"/>

        <TextView
            android:id="@+id/tvTimePassed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummyResearchTime"
            android:textSize="@dimen/bodyText"
            android:fontFamily="@font/rubik"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/smallMargin"
            />

    </RelativeLayout>
